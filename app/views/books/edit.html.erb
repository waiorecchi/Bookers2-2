<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <% if @book.errors.any? %>
        <div class="alert alert-danger">
          <h3><%= @book.errors.count %>件のerrorが発生しました</h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
         </ul>
        </div> 
      <% end %>

      <%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :profile_image, "Image" %>
          <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file" %>
        </div>

        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit 'Update Book', class: "btn btn-secondary" %>
        </div>
      <% end %>
      <%= link_to "Show", @book %> | <%= link_to "Back", books_path %>
    </div>
  </div>
</div>